<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
<style name="AppTheme.NoActionBar" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorControlActivated">@android:color/darker_gray</item>
    <item name="colorControlHighlight">@android:color/darker_gray</item></style>

    <style name="EditText">

        <item name="android:drawablePadding">@dimen/size_15dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">@dimen/size_20dp</item>
        <item name="android:paddingStart">@dimen/size_0dp</item>
        <item name="android:paddingEnd">@dimen/size_5dp</item>
        <item name="android:paddingBottom">@dimen/size_20dp</item>
    </style>

</resources>
